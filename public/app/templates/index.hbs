<div id="main">
    <div class="buttons">
        <div class="left half"><a href="#create_note" class="button">Create new Note</a></div>
        <div class="left half"><select class="button"><option>Black White-Style</option></select></div>
    </div>
    <div class="clear"></div>
    <div class="order listener-main-buttons-area">
        <div class="left"><button id="order_finish" data-query="date&o=ASC" data-index="0" class="button {{buttons.order_finish}}">By finish Date</button></div>
        <div class="left"><button id="order_created" data-query="createdDate&o=ASC" data-index="1" class="button {{buttons.order_created}}">By created Date</button></div>
        <div class="left"><button id="order_importance" data-query="rate&o=DESC" data-index="2" class="button {{buttons.order_importance}}">By Importance</button></div>
        <div class="right"><button id="order_completed" data-query="finished&has=1" data-index="3" class="button {{buttons.order_completed}}">Show finished</button></div>
    </div>
    <div class="clear"></div>

    <div class="clear"></div>
    <div class="item">
    </div>

    <ul class="items">
        {{#each notes}}
            <li class="item">

                <span>Finished: <input type="checkbox" {{#if finished}} checked {{/if}} class="checkbox-row-listener" data-id="{{this.id}}"></span>
                <div class="title">
                    <div class="left half"><strong>{{this.title}}</strong>  <div class="right"><em>Todo until:</em> {{this.date}}</div></div>
                    <div class="left">
                        <ul class="importance index">
                            {{#times this.rate}}
                            <li class="left importance_act"></li>
                            {{/times}}
                        </ul>
                    </div>
                    <div class="clear">
                        <div class="left description"><span class="txt">{{this.description}}</span><span class="left dots">...</span></div>
                        <div class="left buttonindex"><button class="btn-row-listener button" data-id="{{this.id}}">Edit</button></div>
                    </div>
                </div>
                <div class="clear"></div>
            </li>
        {{/each}}
    </ul>

</div>
<script>
    $('.description').on('click', function() {
        //$(this).animate({height: "100%", width: "100%"}, 500);
        $(this).toggleClass('fulltxt');
        $(this).find('.dots').toggle();
    });

</script>